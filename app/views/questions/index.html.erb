<h1>1級</h1>

<table>
  <thead>
    <tr>
      <th>問題</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <h1>一問一答クイズ</h1>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>
<% if flash[:alert] %>
  <p class="alert"><%= flash[:alert] %></p>
<% end %>

<p><%= @question.content %></p>

<%= form_tag({controller: "quizzes", action: "check_answer"}, method: "post") do %>
  <%= text_field_tag "user_answer", @user_answer, placeholder: "回答を入力してください" %>
  <%= submit_tag "回答する" %>
<% end %>    
  </tbody>
</table>



<%= link_to 'New Question', new_question_path %>
